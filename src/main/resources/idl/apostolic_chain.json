{
    "version": "0.1.0",
    "name": "apostolic_chain",
    "instructions": [
        {
            "name": "initializeGenesis",
            "accounts": [
                {
                    "name": "jesus",
                    "isMut": true,
                    "isSigner": false
                },
                {
                    "name": "peter",
                    "isMut": true,
                    "isSigner": false
                },
                {
                    "name": "user",
                    "isMut": true,
                    "isSigner": true
                },
                {
                    "name": "systemProgram",
                    "isMut": false,
                    "isSigner": false
                }
            ],
            "args": [
                {
                    "name": "jesusHash",
                    "type": {
                        "array": [
                            "u8",
                            32
                        ]
                    }
                },
                {
                    "name": "peterHash",
                    "type": {
                        "array": [
                            "u8",
                            32
                        ]
                    }
                },
                {
                    "name": "peterName",
                    "type": "string"
                },
                {
                    "name": "peterStartDate",
                    "type": "i64"
                }
            ]
        },
        {
            "name": "createClergy",
            "accounts": [
                {
                    "name": "newClergy",
                    "isMut": true,
                    "isSigner": false
                },
                {
                    "name": "parentAccount",
                    "isMut": false,
                    "isSigner": false,
                    "isOptional": true
                },
                {
                    "name": "user",
                    "isMut": true,
                    "isSigner": true
                },
                {
                    "name": "systemProgram",
                    "isMut": false,
                    "isSigner": false
                }
            ],
            "args": [
                {
                    "name": "hash",
                    "type": "string"
                },
                {
                    "name": "parentHash",
                    "type": "string"
                },
                {
                    "name": "name",
                    "type": "string"
                },
                {
                    "name": "role",
                    "type": {
                        "defined": "Role"
                    }
                },
                {
                    "name": "startDate",
                    "type": "i64"
                },
                {
                    "name": "papacyStartDate",
                    "type": {
                        "option": "i64"
                    }
                }
            ]
        }
    ],
    "accounts": [
        {
            "name": "Clergy",
            "type": {
                "kind": "struct",
                "fields": [
                    {
                        "name": "hash",
                        "type": "string"
                    },
                    {
                        "name": "parentHash",
                        "type": "string"
                    },
                    {
                        "name": "name",
                        "type": "string"
                    },
                    {
                        "name": "role",
                        "type": {
                            "defined": "Role"
                        }
                    },
                    {
                        "name": "startDate",
                        "type": "i64"
                    },
                    {
                        "name": "papacyStartDate",
                        "type": {
                            "option": "i64"
                        }
                    },
                    {
                        "name": "bump",
                        "type": "u8"
                    }
                ]
            }
        }
    ],
    "types": [
        {
            "name": "Role",
            "type": {
                "kind": "enum",
                "variants": [
                    {
                        "name": "Bishop"
                    },
                    {
                        "name": "Pope"
                    },
                    {
                        "name": "Root"
                    }
                ]
            }
        }
    ],
    "errors": [
        {
            "code": 6000,
            "name": "ParentAccountMissing",
            "msg": "O parent_hash não é 00x00x00, então você DEVE fornecer a conta do pai para validação."
        },
        {
            "code": 6001,
            "name": "InvalidParentHash",
            "msg": "A conta do pai fornecida não corresponde ao parent_hash informado."
        }
    ]
}